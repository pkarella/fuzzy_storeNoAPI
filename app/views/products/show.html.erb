<h1><%= @product.name %></h1>
<div class="well">
  <% if @product.photos.any? %>
    <% @product.photos.each do |pic| %>
    <%= image_tag(pic) %>
    <% end %>
  <% end %>
  <p>
    <%= @product.description %>
  </p>
</div>
<br>
<br>
<% if current_user && @user_purchase.include?(@product) %>
<li><%= link_to "Leave a review for this product", new_product_review_path(@product.id), id: "new_link", remote: true %></li>
<% end %>

<br>
<br>

<div id="reviews">

    <% if @reviews %>
      <% @reviews.each do |review| %>
        <div class="well">
          <% if review.photos.any? %>
            <% review.photos.each do |pic| %>
            <%= image_tag(pic.image(:medium)) %>
            <% end %>
          <% end %>
        <p>
          <%= review.content %>
        </p>

        <h6>By: <%= review.author %></h6>
        </div>
       <% end %>
    <% end %>
  
</div>
