<h1><%= @product.name %></h1>
<div class="well">
  <% if @product.photos.any? %>
    <% @product.photos.each do |pic| %>
    <%= image_tag(pic) %>
    <% end %>
  <% end %>
  <p>
    <%= @product.description %>
  </p>
</div>
<br>
<br>
<% if current_user && @user_purchase.include?(@product) %>
<p><%= link_to "Add a Review", new_product_review_path(@product), id: "new_link", remote: true %></p>
<% end %>

<br>
<br>






  <% if @reviews %>
       <% @reviews.each do |review| %>

         <div class="well">
           <% if review.photos.any? %>
             <% review.photos.each do |pic| %>
             <%= image_tag(pic.image(:medium)) %>
             <% end %>
           <% end %>
         <p>
           <%= review.content %>
         </p>

         <h6>By: <%= review.author %></h6>
         </div>
         <% end %>
     <% end %>


