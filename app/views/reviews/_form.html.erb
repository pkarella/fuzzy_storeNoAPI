<%= form_for [@product, @review], remote: true do |form| %>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :review_name %>
  </div>

  <div class="field">
    <%= form.label :rating %>
    <%= form.text_field :rating, id: :review_rating %>
  </div>

  <div class="field">
    <%= form.label :Comments %>
    <%= form.text_area :content, id: :review_content %>
  </div>
  <div class="form-group">
    <%= form.label :image  %><br>
    <%= form.file_field :image %>
  </div>
   <%= form.hidden_field :product_id, :value => @product.id %>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
